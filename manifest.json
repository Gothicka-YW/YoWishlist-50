{
  "manifest_version": 3,
  "name": "YoCatalog",
  "version": "1.5.1",
  "description": "YoWorld fan tool: Screen Grab stitched crops from yoworld.info/template plus Avatars, Wish Lists, and Images libraries with uploads and BBCode.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "downloads",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.yoworld.info/*",
    "https://api.imgbb.com/*",
    "https://catbox.moe/*",
    "https://postimages.org/*",
    "https://i.postimg.cc/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YoCatalog",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yoworld.info/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}